<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.ppl_admindrawer.fragment_inputWis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_nama_usr"
                app:met_floatingLabelText="Masukkan wisata"
                android:hint="Masukkan nama wisata"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_email_usr"
                app:met_floatingLabelText="Masukkan Lokasi"
                android:hint="Masukkan Lokasi"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:id="@+id/txt_lokasi_usr"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                android:layout_marginBottom="10dp"
                app:met_floatingLabelText="Masukan harga"
                android:inputType="number"
                android:hint="Masukan Harga"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:id="@+id/txt_nohp_usr"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                android:layout_marginBottom="10dp"
                app:met_floatingLabelText="Masukan deskripsi"
                android:hint="Masukan deskripsi/sejarah"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:id="@+id/txt_pass_usr"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                android:layout_marginBottom="10dp"
                app:met_floatingLabelText="Masukan deskripsi"
                android:hint="Masukan deskripsi/sejarah"/>

            <ImageView
                android:id="@+id/image_usr"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="30dp"

                />
            <TextView
                android:id="@+id/txt_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
